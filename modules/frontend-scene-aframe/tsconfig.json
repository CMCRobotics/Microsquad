{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",

    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "node-homie"]
  },
  "include": ["src/**/*", "bin/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
