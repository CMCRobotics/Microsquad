{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/lib",
      "strict": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": ["node", "jest"]
    },
    "typeAcquisition": { "include": ["jest"] },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }